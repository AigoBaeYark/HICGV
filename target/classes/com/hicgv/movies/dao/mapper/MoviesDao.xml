<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hicgv.movies.dao.MoviesDao">
	<select id="movies" resultType="com.hicgv.movies.dto.MoviesDto">
		SELECT * FROM HICGV_MOVIE ORDER BY RANKING
	</select> <!-- ## sql문 뒤에 ; 꼭 빼기 !! 안 뺴서 500오류 -->
	<!-- 해당영화경로불러오기, 영화정보가져오기 sql코드  -->
	<select id="moviesdv" resultType="com.hicgv.movies.dto.MoviesDto">
		<!-- Dto를 Dao로 써서 Invalid bound statement (not found): 오류 뜸 -->
		SELECT * FROM HICGV_MOVIE WHERE MOVIE_ID=#{param1}	
	</select>
	<!-- 배우가져오는 sql코드 -->
	<select id="actor" resultType="com.hicgv.movies.dto.MovieActorDto">
		SELECT * FROM HICGV_MOVIE_ACTOR WHERE MOVIE_ID=#{param1}
	</select>
	<!-- 감독가져오는 sql코드 -->
	<select id="director" resultType="com.hicgv.movies.dto.MovieDirectorDto">
		SELECT * FROM HICGV_MOVIE_DIRECTOR WHERE MOVIE_ID=#{param1}
	</select>	
	<!-- 트레일러가져오는 sql코드 -->
	<select id="trailer" resultType="com.hicgv.movies.dto.MovieTrailerDto">
		SELECT * FROM HICGV_MOVIE_TRAILER WHERE MOVIE_ID=#{param1}
	</select>
	<!-- 포스터가져오는 sql코드 -->
	<select id="poster" resultType="com.hicgv.movies.dto.MoviePosterDto">
		SELECT * FROM HICGV_MOVIE_POSTER WHERE MOVIE_ID=#{param1}
	</select>
		
			
			
	









